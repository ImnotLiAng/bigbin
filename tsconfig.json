{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "rootDir": "./src",
    "declaration": true,
    "typeRoots": [ "./types", "./node_modules/@types",]
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules", "app"],
}
