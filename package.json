{
  "name": "bigbin",
  "version": "1.0.0",
  "description": "nothing, just some silly code",
  "main": "main.js",
  "scripts": {
    "start": "node dist/buildTools/main.js",
    "copy-pem": "copyfiles *.pem dist/buildTools",
    "copy-assets": "copyfiles -e '**/*.ts' 'src/**/*.*' dist/buildTools",
    "copy-app": "copyfiles -u 2 -e '**/*.ts' app/src/**/* dist/",
    "copy": "run-p copy-pem copy-assets copy-app",
    "build-root": "tsc -p tsconfig.json",
    "build-app": "tsc -p app/tsconfig.json",
    "build": "rimraf dist && run-p build-root build-app copy",
    "watch": "node watch.js",
    "dev": "npm run build && run-p start watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "bin",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.12",
    "chokidar": "^3.6.0",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "node-watch": "^0.7.4",
    "ws": "^8.18.0"
  }
}
